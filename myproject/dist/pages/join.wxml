
  <view style="height: {{height}}px; width: {{width}}px;" class="back">
    <view>
      <view>
        <view>
          <view class="section">选择主题</view>
          <picker bindchange="bindPickerChange" value="{{index}}" range="{{array}}">
            <view class="section">
              当前选择：{{array[index]}}
            </view>
          </picker>
        </view>
      </view>
      <view class="left">
        <block  wx:for="{{src}}">
          <image class="image" src="{{item}}"/>
        </block>
        <view class="view">
          <image class="size" src="{{plus}}" bindtap="tap"/>
        </view>
      </view>
      <view class="text">
        <view class="page">
          <text>作品名称</text>
        </view>
        <input class="input" placeholder="请给你的作品起个名字吧"/>
      </view>
      <view class="text">
        <view class="right">
          <text>作品描述</text>
        </view>
        <textarea class="textarea" placeholder="这一刻你的想法是什么。。。"/>
      </view>
      <view class="center">
        <button class="button">上传作品</button>
      </view>
    </view>
  </view>