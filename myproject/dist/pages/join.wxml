
  <view style="height: {{height}}px; width: {{width}}px;" class="back">
    <view>
      <view>
        <text>选择主题</text>
        <view class="section">
          <view class="section__title">普通选择器</view>
          <picker bindchange="bindPickerChange" value="{{index}}" range="{{array}}">
            <view class="picker">
              当前选择：{{array[index]}}
            </view>
          </picker>
        </view>
        <view  wx:if="{{value}}">
          <text>{{value}}</text>
        </view>
        <radio-group  wx:else bindchange="radioChange">
          <view class="radio">
            <label wx:for="{{items}}" wx:key="index">
              <radio value="{{item.name}}"/>{{item.value}}
            </label>
          </view>
        </radio-group>
      </view>
      <view class="left">
        <block wx:for="{{src}}">
          <image class="image" src="{{item}}"/>
        </block>
        <view class="view">
          <image class="size" src="{{plus}}" bindtap="tap"/>
        </view>
      </view>
      <view class="text">
        <view class="page">
          <text>作品名称</text>
        </view>
        <input class="input" placeholder="请给你的作品起个名字吧"/>
      </view>
      <view class="text">
        <view class="right">
          <text>作品描述</text>
        </view>
        <textarea class="textarea" placeholder="这一刻你的想法是什么。。。"/>
      </view>
      <view class="center">
        <button class="button">上传作品</button>
      </view>
    </view>
  </view>