
.button {
  display: flex;
  justify-content: center;
  align-items: center;
  position: fixed;
  bottom: 0;
  width: 100%;
  background-color: azure;
}

.view {
  display: flex;
  width: 300px;
  height: 450px;
}

.be {
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: azure;
  height: 100%;
}

.works {
  display: flex;
  flex-direction: column;
  margin-top: 10px;
}

.text {
  display: flex;
  padding: 10px;
}

