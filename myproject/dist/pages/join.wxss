
.size {
  display: flex;
  width: 45px;
  height: 45px;
  margin: 2.5px;
}

.view {
  display: flex;
  width: 50px;
  height: 50px;
  border: 1px solid gray;
}

.left {
  display: flex;
  margin: 10px;
}

.text {
  display: flex;
  margin-top: 20px;
}

.page {
  display: flex;
  margin: 0px 10px;
  align-items: center;
}

.textarea {
  display: flex;
  height: 70px;
  width: 250px;
  border: 1px solid black;
  border-radius: 10px;
  padding-left: 10px;
}

.input {
  display: flex;
  border: 1px solid black;
  width: 210px;
  border-radius: 10px;
  padding-left: 10px;
}

.button {
  position: fixed;
  bottom: 0;
  margin-bottom: 25px;
}

.center {
  display: flex;
  justify-content: center;
}

.right {
  display: flex;
  margin: 0px 10px;
}

.back {
  background-image: url('https://img.25pp.com/uploadfile/bizhi/iphone6p/20160727/1469588474616338_390x690.jpg');
  width: 100%;
}

.radio {
  display: flex;
  flex-direction: column;
}

.row {
  display: flex;
  flex-direction: row;
}

.image {
  height: 100px;
  width: 80px;
}
.section {
  display: flex;
  padding-top: 10px;
  padding-left: 10px;
}
